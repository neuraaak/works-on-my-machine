{
  "version": "0.2",
  "description": "CSpell configuration for Vue project: {{PROJECT_NAME}}",
  "language": "en,fr",
  "words": [
    "{{PROJECT_NAME}}",
    "webpack",
    "babel",
    "eslint",
    "prettier",
    "javascript",
    "vue",
    "vuejs"
  ],
  "dictionaries": [
    "node",
    "npm",
    "html",
    "css",
    "companies",
    "softwareTerms"
  ],
  "import": [
    "@cspell/dict-node/cspell-ext.json",
    "@cspell/dict-npm/cspell-ext.json",
    "@cspell/dict-html/cspell-ext.json",
    "@cspell/dict-css/cspell-ext.json",
    "@cspell/dict-companies/cspell-ext.json",
    "@cspell/dict-software-terms/cspell-ext.json"
  ],
  "overrides": [
    {
      "filename": "**/*.{js,vue}",
      "includeRegExpList": [
        "CStyleComment",
        "string"
      ]
    },
    {
      "filename": "**/package.json",
      "words": [
        "devdependencies",
        "peerdependencies",
        "optionaldependencies",
        "browserslist",
        "workspaces"
      ]
    },
    {
      "filename": "**/*.{html,htm}",
      "dictionaries": [
        "html",
        "css",
        "companies"
      ]
    },
    {
      "filename": "**/*.{css,scss,sass,less}",
      "dictionaries": [
        "css",
        "html",
        "companies"
      ]
    },
    {
      "filename": "**/*.md",
      "dictionaries": [
        "node",
        "companies",
        "softwareTerms"
      ]
    },
    {
      "filename": "**/*.{yml,yaml}",
      "words": [
        "github",
        "workflows",
        "nodejs"
      ]
    }
  ],
  "ignorePaths": [
    "node_modules/**",
    "dist/**",
    "build/**",
    "coverage/**",
    ".nuxt/**",
    "out/**",
    "*.min.js",
    "*.min.css",
    "package-lock.json",
    "yarn.lock",
    "pnpm-lock.yaml"
  ],
  "allowCompoundWords": true,
  "caseSensitive": false
}

