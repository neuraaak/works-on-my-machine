{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true,
        "jest": true
    },
    "extends": [
        "eslint:recommended",
        "plugin:vue/vue3-recommended",
        "prettier"
    ],
    "parser": "vue-eslint-parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "parser": "espree"
    },
    "plugins": [
        "vue"
    ],
    "rules": {
        "no-console": "warn",
        "no-debugger": "error",
        "no-unused-vars": [
            "error",
            {
                "argsIgnorePattern": "^_"
            }
        ],
        "vue/multi-word-component-names": "off",
        "vue/no-v-html": "warn",
        "vue/require-default-prop": "off",
        "vue/require-explicit-emits": "warn",
        "prefer-const": "error",
        "no-var": "error",
        "object-shorthand": "error",
        "prefer-template": "error",
        "template-curly-spacing": "error",
        "arrow-spacing": "error",
        "no-eval": "error",
        "no-implied-eval": "error",
        "no-new-func": "error",
        "no-script-url": "error"
    },
    "overrides": [
        {
            "files": [
                "**/*.test.js",
                "**/*.spec.js"
            ],
            "env": {
                "jest": true
            },
            "rules": {
                "no-console": "off"
            }
        },
        {
            "files": [
                "**/*.config.js"
            ],
            "rules": {
                "no-console": "off"
            }
        }
    ]
}