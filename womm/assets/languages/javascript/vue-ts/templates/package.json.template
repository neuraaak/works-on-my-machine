{
  "name": "{{PROJECT_NAME}}",
  "version": "1.0.0",
  "description": "{{PROJECT_DESCRIPTION}}",
  "main": "{{MAIN_FILE}}",
  "type": "{{MODULE_TYPE}}",
  "scripts": {
    "dev": "{{DEV_COMMAND}}",
    "build": "{{BUILD_COMMAND}}",
    "start": "{{START_COMMAND}}",
    "lint": "eslint . --ext .ts,.vue",
    "lint:fix": "eslint . --ext .ts,.vue --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "type-check": "tsc --noEmit",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage"
  },
  "keywords": ["{{KEYWORDS}}"],
  "author": "{{AUTHOR_NAME}} <{{AUTHOR_EMAIL}}>",
  "license": "MIT",
  "dependencies": {
    "vue": "^3.3.0"{{DEPENDENCIES}}
  },
  "devDependencies": {
    "@vue/test-utils": "^2.4.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@types/jest": "^29.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-vue": "^9.15.0",
    "husky": "^8.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "lint-staged": "^14.0.0",
    "prettier": "^3.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0",
    "vue-tsc": "^1.8.0"{{DEV_DEPENDENCIES}}
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "repository": {
    "type": "git",
    "url": "{{PROJECT_REPOSITORY}}"
  },
  "bugs": {
    "url": "{{PROJECT_REPOSITORY}}/issues"
  },
  "homepage": "{{PROJECT_URL}}",
  "lint-staged": {
    "*.{ts,vue}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "jest": {
    "testEnvironment": "jsdom",
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "src/**/*.{ts,vue}",
      "!src/**/*.d.ts",
      "!src/main.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 70,
        "functions": 70,
        "lines": 70,
        "statements": 70
      }
    },
    "testMatch": [
      "<rootDir>/src/**/__tests__/**/*.{ts,vue}",
      "<rootDir>/src/**/?(*.)(spec|test).{ts,vue}",
      "<rootDir>/tests/**/*.{ts,vue}"
    ],
    "moduleFileExtensions": ["ts", "js", "json", "vue"],
    "transform": {
      "^.+\\.vue$": "@vue/vue3-jest",
      "^.+\\.ts$": "ts-jest"
    }
  }
}

